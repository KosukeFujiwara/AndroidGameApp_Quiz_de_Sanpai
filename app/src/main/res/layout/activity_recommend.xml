<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/ScrollView"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/torii4_ishi"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommendTitle"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/recommendShrine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:text=""
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:textColor="#111111"
            android:typeface="serif"
            android:gravity="center_horizontal"
            android:shadowColor="#808080"
            android:shadowDx="10.0"
            android:shadowDy="10.0"
            android:shadowRadius="5.0"/>
        <TextView
            android:id="@+id/recommendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="75dp"
            android:text=""
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#111111"
            android:typeface="serif"
            android:gravity="center"
            android:shadowColor="#bbbbbb"
            android:shadowDx="10.0"
            android:shadowDy="10.0"
            android:shadowRadius="10.0"/>
        <Button
            android:id="@+id/btnToTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/toTop"
            android:textSize="15sp"/>

    </LinearLayout>
</ScrollView>